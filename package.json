{
  "name": "fs-nano-store",
  "version": "0.1.0",
  "description": "A simple, super minimalistic data store on a file system with zero dependencies and TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --splitting --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --splitting --clean --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "filesystem",
    "store"
  ],
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "repository": "github:cawa-93/fs-nano-store",
  "homepage": "https://github.com/cawa-93/fs-nano-store#readme",
  "bugs": {
    "url": "https://github.com/cawa-93/fs-nano-store/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "18.11.17",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  }
}
